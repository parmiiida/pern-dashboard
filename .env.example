# Base path for the app (usually /)
VITE_BASE_URL=/

# Backend API base URL – required for local dev (frontend on localhost → backend on localhost)
# Backend runs on port 8000 by default. Must end with /api/
VITE_BACKEND_BASE_URL=http://localhost:8000/api/

# Cloudinary (optional, for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=
VITE_CLOUDINARY_UPLOAD_URL=
